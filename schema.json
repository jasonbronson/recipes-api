{
  "name": "recipe_response",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string"
      },
      "date": {
        "type": "string"
      },
      "image": {
        "type": "string"
      },
      "prepTime": {
        "type": "integer"
      },
      "cookTime": {
        "type": "integer"
      },
      "totalTime": {
        "type": "integer"
      },
      "servings": {
        "type": "integer"
      },
      "category": {
        "type": "string",
        "enum": ["breakfast", "dinner", "baking", "other"]
      },
      "ingredients": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "parsedIngredients": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "amountValue": { "type": "number" },
            "amountText": { "type": "string" },
            "unit": { "type": "string" },
            "description": { "type": "string" }
          },
          "required": ["amountValue", "amountText", "unit", "description"],
          "additionalProperties": false
        }
      },
      "instructions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [
      "title",
      "date",
      "image",
      "prepTime",
      "cookTime",
      "totalTime",
      "servings",
      "parsedIngredients",
      "ingredients",
      "instructions",
      "category"
    ],
    "additionalProperties": false
  }
}
